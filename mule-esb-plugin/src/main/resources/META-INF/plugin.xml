<idea-plugin>
    <id>org.mule.tooling.intellij.muleruntime.v2</id>
    <name>Mule 4 Runtime Intellij Plugin.</name>
    <version>2.0.4</version>
    <vendor email="mariano.achaval@mulesoft.com" url="https://github.com/mulesoft-labs/data-weave-intellij-plugin">
        Mulesoft
    </vendor>
    <description><![CDATA[
     Mule Runtime platform plugin
    ]]></description>

    <idea-version since-build="145"/>

    <depends>com.intellij.properties</depends>
    <depends>org.jetbrains.idea.maven</depends>

    <change-notes><![CDATA[
    ]]>
    </change-notes>

    <extensions defaultExtensionNs="com.intellij">
        <moduleBuilder builderClass="org.mule.tooling.runtime.wizard.SdkModuleBuilder"/>
        <moduleBuilder  builderClass="org.mule.tooling.runtime.wizard.MuleAppModuleBuilder"/>
        <fileTemplateGroup implementation="org.mule.tooling.runtime.template.RuntimeTemplateManager"/>
        <xml.schemaProvider implementation="org.mule.tooling.runtime.schema.MuleSchemaProvider"/>
    </extensions>


    <application-components>

        <component>
            <implementation-class>org.mule.tooling.runtime.tooling.MuleRuntimeServerManager</implementation-class>
        </component>
        <component>
            <implementation-class>org.mule.tooling.runtime.tooling.MavenConfigurationManager</implementation-class>
        </component>
        <component>
            <implementation-class>org.mule.tooling.runtime.sdk.MuleSdkManager</implementation-class>
        </component>
    </application-components>


    <actions>

    </actions>

    <module-components>
        <component>
            <implementation-class>org.mule.tooling.runtime.schema.MuleSchemaManager</implementation-class>
            <interface-class>org.mule.tooling.runtime.schema.MuleSchemaManager</interface-class>
        </component>
        <component>
            <implementation-class>org.mule.tooling.runtime.tooling.ToolingClientManager</implementation-class>
            <interface-class>org.mule.tooling.runtime.tooling.ToolingClientManager</interface-class>
        </component>
    </module-components>
</idea-plugin>